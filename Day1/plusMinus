//c++ code
#include <iostream>
#include <iomanip>
using namespace std;
void plusMinus(int arr[],int n){
    float pos=0,neg=0,zero=0;
    for(int i=0;i<n;i++){
        if(arr[i]>0) pos++;
        else if(arr[i]<0) neg++;
        else zero++;
        
    }
cout<<fixed<<setprecision(6)<<pos/n<<endl<<neg/n<<endl<<zero/n;    
}
int main() {
    int arr[]={1,2,5,0,-1,-3,0,0};
    int n=sizeof(arr)/sizeof(arr[0]);
    plusMinus(arr,n);

    return 0;
}
